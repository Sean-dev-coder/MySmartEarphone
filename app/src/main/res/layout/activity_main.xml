<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="請選擇查詢社區"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:backgroundTint="#B0BEC5"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tv_source_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收音來源偵測中..."
        android:textColor="#CFD8DC"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tv_speech_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_eye_care_card"
        android:hint="查詢結果將顯示於此..."
        android:textColorHint="#546E7A"
        android:padding="20dp"
        android:lineSpacingExtra="6sp"
        android:textColor="#ECEFF1"
        android:textSize="20sp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btn_listen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#37474F"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:text="開始查詢車牌" />

</LinearLayout>